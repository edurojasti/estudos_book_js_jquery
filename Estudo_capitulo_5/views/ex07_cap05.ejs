<body>
    <ul>
        <li id="um" class="hot">
            <em>Fresh</em> figs
        </li>
        <li id="dois" class="hot">pine nuts</li> 
        <li id="tres" class="hot">honey</li>
        <li id="quatro" class="hot">balsamic vinegar</li>
    </ul>
    <div id="scriptResults">

    </div>
    
    <!-- JS -->
    <script>
        var firstItem = document.getElementById('um')
        var showText = firstItem.textContent
        var showInnerTxt = firstItem.innerText
        
        var msg = `<p>textContent: ${showText}</p>`
            msg += `<p>innerTxt: ${showInnerTxt}</p>`

        var resultado = document.getElementById('scriptResults')
        resultado.innerHTML = msg

        firstItem.textContent = 'Sourdough bread'
    </script>
</body>
