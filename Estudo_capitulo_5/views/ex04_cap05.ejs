<body>
    <div class="container-center">
        <h1 id="header">List king</h1>
        <h2>Buy groceries</h2>

        <ul>
            <li id="one" class="hot">
                <em>Fresh</em> figs
            </li>
            <li id="two" class="hot">pine nuts</li>
            <li id="three" class="hot">honey</li>
            <li id="four" class="hot">Ice cream</li>
            <li id="five" class="hot">cake</li>
            <li id="six" class="hot">oranges</li>
        </ul>
    </div>
    

    <!-- JS -->
    <script>
        var z = document.querySelector('li.hot') //usando o querySelector em esta vari√°vel, retorna o primeiro li com classe hot.
        z.className = 'cool'

        var x = document.querySelectorAll('li.hot')//querySelectorAll retorna uma NodeList
        x[2].className = 'cool'
    </script>
</body>
