    <!-- JS -->
    <script>
        var elementos = document.getElementsByClassName('hot') //localiza novos elementos com a classe "hot"
        if(elementos.length > 2){ //se hรก mais de 2 elementos com a classe hot
            var x = [elementos[0], elementos[1], elementos[2]]  //array com todos os elementos selecionados
            x[0].className = 'cool'
            x[1].className = 'cool'
            x[2].className = 'cool' //muda a classe desse elemento
        }
    </script>
