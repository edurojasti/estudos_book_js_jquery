</head>
<body>
    <div id="page">
        <h1 id="header">List</h1>
        <h2>Buy Groceries <span id="qtdItens">2</span></h2>
            
        <ul id="lista">
            <li id="one" class="hot">Pine nuts</li>
            <li id="two" class="hot">Honey</li>
            <li id="three" class="hot">Fresh figs</li>
            <li id="four" class="hot">Balsamic vinegar</li>
            <li id="five" class="hot">Banana Split</li>
        </ul>
    </div>

    <!-- JS -->
    <script> 
        // exemplo final do capitulo
        var lista = document.querySelectorAll('li.hot')       

        for(var i = 0; i < lista.length; i++){
            lista[i].className = "cool"
        }

        //declarando variaveis pra insersÃ£o na lista
        var idLista = document.getElementById('lista')
        var novoElemento1 = document.createElement('li')
        var novoElemento2 = document.createElement('li')
        novoElemento1.className='cool'
        novoElemento2.className='cool'
        var texto1, texto2

        texto1 = document.createTextNode('Kale')
        texto2 = document.createTextNode('Uva')

        novoElemento1.appendChild(texto1)
        novoElemento2.appendChild(texto2)

        idLista.insertBefore(novoElemento1, idLista.firstChild)
        idLista.appendChild(novoElemento2)

        var quantidade = document.querySelectorAll('li.cool')
        console.log(quantidade.length)
        var span = document.getElementById('qtdItens')
        span.innerHTML = quantidade.length
        span.style.background ='#fff'
        span.style.color ="#000"
        span.style.fontWeight = "900"

    </script>
</body>
</html>