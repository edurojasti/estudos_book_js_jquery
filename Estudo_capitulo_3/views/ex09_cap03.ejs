    <div id="info">
    </div>
    <button type="button" onclick="tst()">Clique aqui</button>
<script>
    //USING THE BROWSER OBJECT MODEL (BOM)
    var titulo = 'Browser Window'
    var innerwIDTH = `Width: ${window.innerWidth}`
    var innerHEIGHT = `Height: ${window.innerHeight}`
    var historico = window.history.length
    
    document.getElementById('info').innerHTML = '<br>' + titulo + '<br>' + innerwIDTH + '<br> ' + innerHEIGHT + '<br> ' + historico
    function tst(){
      alert('Pagina atual: ' + window.location)
    }
</script>
