<body>
    <h1>TravelWorthy</h1>
    <div id="message">
        Welcome to our site!
    </div>


<script>
    //Criando objetivos literal
    var hotel = {
        nome: 'Hotel IBIS', //propiedade 'nome'
        quartos: 500,       //propiedade 'quartos'
        reservados: 145,    //propiedade 'reservados'
        disponiveis: function(){ //método
            return this.quartos - this.reservados
        }
    }

     document.getElementById('message').innerHTML = '<b>'+hotel.nome +'</b>' + ' possui ' + hotel.disponiveis() + ' quartos disponíveis'

    </script>
</body>
