<body>
    <h1>TravelWorthy</h1>
    <div id="message">
        <p id="message1"></p>
        <p id="message2"></p>
    </div>


<script>
   //Criando e acessando objetos com notação de Construtor.
    function banco(name, caixasEletronicos, caixasEstragados){
        this.name = name
        this.caixasEletronicos = caixasEletronicos
        this.caixasEstragados = caixasEstragados
        this.caixasFUNCIONANDO = function(){
            return this.caixasEletronicos - this.caixasEstragados 
        }
    }

    
    var bancoItau = new banco('ITAÚ', 800, 79) //banco 01
    var bancoBrasil = new banco('BANCO DO BRASIL', 7700, 1574) //banco 02

    document.getElementById("message1").innerHTML = `O banco <b> ${bancoItau.name} </b>
    possui uma grande quantidade de caixas eletronicos espalhados pelo Brasil, 
    um total de : ${bancoItau.caixasEletronicos}, e atualmente só funcionam ${bancoItau.caixasFUNCIONANDO()}`

    document.getElementById("message2").innerHTML = `O banco <b> ${bancoBrasil.name} </b> 
    possui uma grande quantidade de caixas eletronicos espalhados pelo Brasil, 
    um total de : ${bancoBrasil.caixasEletronicos}, e atualmente só funcionam ${bancoBrasil.caixasFUNCIONANDO()}`
</script>
